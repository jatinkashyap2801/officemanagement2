<odoo>
    <record id="payment_confirmation_wizard_view_form" model="ir.ui.view">
        <field name="name">pay.conf.form</field>
        <field name="model">pay.conf</field>
        <field name="arch" type="xml">
            <form string="Confirm Payment">
                <group>
                    <field name="employee_name" readonly="1"/>
                    <field name="amount" readonly="1"/>
                </group>
                <footer>
                    <button string="Confirm" type="object" name="confirm_payment" class="btn-primary"/>
                    <button string="Cancel" type="object" name="cancel_payment" class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>